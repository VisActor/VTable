{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "outDir": "./es",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["jest", "node"],
    "paths": {
      "@visactor/vtable": ["../vtable/es/index.d.ts"],
      "@visactor/vtable/*": ["../vtable/es/*"]
    },
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules", "es", "cjs"]
}