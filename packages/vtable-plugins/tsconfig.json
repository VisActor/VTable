{
  "extends": "@internal/ts-config/tsconfig.base.json",
  "include": ["src"],
  "compilerOptions": {    
    "types": ["jest", "offscreencanvas", "node"],
    "lib": ["DOM", "ESNext"],
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./es",
    "composite": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
    "strict": false,
    "paths": {
      "@src/vrender": ["../vtable/src/vrender.ts"],
      "@src/ts-types": ["../vtable/src/ts-types/index.ts"],
      "@vutils-extension": ["./src/vutil-extension-temp"]
    }
  },
  "references": [
    {
      "path": "../vtable-editors"
    }
  ],
}