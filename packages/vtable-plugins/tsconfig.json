{
  "extends": "@internal/ts-config/tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "types": ["jest", "offscreencanvas", "node"],
    "lib": ["DOM", "ESNext"],
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./es",
    "composite": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
    "strict": false,
    "paths": {
      "@src/*": ["./src/*"],
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "references": [
    {
      "path": "../vtable"
    }
  ],
  "include": ["src"]
}